<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieReviewProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieReviewProject.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- ① 로그인 페이지를 첫 화면으로 설정 -->
    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <!-- ② 회원가입 페이지 -->
    <ShellContent
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <!-- ③ 로그인 완료 후 이동할 메인 페이지 -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- ④ 영화 상세 페이지 (MovieDetailPage) 
         - QueryProperty로 tmdbId를 받아옴 -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MovieDetailPage}"
        Route="MovieDetailPage" />

    <!-- ⑤ 내 리뷰 페이지 -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MyReviewsPage}"
        Route="MyReviewsPage" />
</Shell>
