<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieReviewProject.Views.MovieListPage"
             Title="영화 목록">

    <CollectionView x:Name="MovieCollectionView" ItemsSource="{Binding Movies}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="10" Spacing="5">
                    <Image Source="{Binding PosterPath}" HeightRequest="200" Aspect="AspectFill"/>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Title}" />
                                <Span Text=" 😀 {Binding HappyCountDisplay}" FontSize="14" TextColor="Orange"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="{Binding Overview}" FontSize="14" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
