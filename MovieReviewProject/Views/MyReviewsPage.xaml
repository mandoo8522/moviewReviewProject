<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieReviewProject.Views.MyReviewsPage"
             Title="내 리뷰"
             BackgroundColor="Black">

    <ScrollView>
        <CollectionView x:Name="MyReviewListView"
                        ItemsSource="{Binding MyReviews}"
                        SelectionMode="None"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#1E1E1E" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding title}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding content}" TextColor="White" FontSize="14"/>
                            <Label Text="⭐ {Binding rating}" TextColor="Gold" FontSize="13"/>
                            <Label Text="{Binding created_at}" TextColor="Gray" FontSize="11"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>
